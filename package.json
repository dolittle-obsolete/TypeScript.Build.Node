{
    "name": "@dolittle/typescript.build",
    "version": "0.0.10",
    "description": "Base build pipeline for Dolittle TypeScript projects",
    "author": "",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "main": "lib/index.js",
    "types": "Source/index.d.ts",
    "typings": "Source/index.d.ts",
    "scripts": {
        "ts:cjs": "tsc -p tsconfig.json --declaration false",
        "ts:typedefs": "tsc --outDir ./Source --emitDeclarationOnly",
        "ts:all": "yarn ts:cjs && yarn ts:typedefs",
        "ts:clean": "rimraf ./Source/*.d.ts Source/**/*.d.ts lib",
        "build": "yarn clean && yarn ts:all",
        "clean": "rimraf dist && yarn ts:clean",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-transform-modules-commonjs": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-typescript": "^7.3.3",
        "@fluffy-spoon/substitute": "^1.89.0",
        "@types/chai": "^4.1.7",
        "@types/fs-extra": "^5.1.0",
        "@types/mocha": "^5.2.6",
        "@types/node": "12.0.0",
        "babel-merge": "^3.0.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^6.1.4",
        "module-alias": "^2.2.0",
        "rimraf": "^2.6.3",
        "sinon": "^7.3.2",
        "sinon-chai": "^3.3.0",
        "sinon-chai-in-order": "^0.1.0",
        "typescript": "^3.4.5"
    },
    "files": [
        "mocha.opts.js",
        "lib",
        "package.json",
        "Source/**/*.d.ts"
    ]
}
